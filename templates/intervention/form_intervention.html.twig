{% extends 'base.html.twig' %}

{% block title %}Formulaire d'interventions
{% endblock %}

{% block body %}
<div class="mx-auto mt-10 p-6">
	{{ form_start(form) }}
	{% include "composants/form_champ_text.html.twig" with {
			'label' : 'Titre',
			'field' : form.title
		} %}

	<div class="flex">

		{% include "composants/form_champ_date.html.twig" with {
            'field': form.start_date 
        } %}

		<div class="mt-4"></div>

		{% include "composants/form_champ_date.html.twig" with {
            'label': 'Date de fin',
            'field': form.end_date
        } %}
	</div>

	<div class="flex">
		{% include "composants/form_champ_select.html.twig" with {
			'label' : 'Module',
			'field' : form.module
		} %}

		{% include "composants/form_champ_select.html.twig" with {
			'label' : 'Type d\'intervention',
			'field' : form.intervention_type
		} %}
	</div>

		{% include "composants/multi_select.html.twig" with {
			'field' : form.courseInstructor,
		} %}

		{% include "composants/form_champ_switch.html.twig" with{
			'label' : 'Intervention effectu√©e en visio',
			'field' : form.remotely
		}%}
	
	<button type="submit" class="mt-6 bg-purple-600 text-white px-4 py-2 rounded">
		Enregistrer
	</button>
</div>

{{ form_end(form) }}
{% endblock %}
