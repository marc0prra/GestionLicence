<section class="max-w-5xl w-full mr-auto">
	<div>
		<h1 class="font-medium text-[#1F384C] text-[26px] mb-[10px]">
			Corps enseignant
		</h1>
        
		<div class="mt-2 md:mt-0">
			{% include 'composants/button.html.twig' with {
					label: 'Ajouter un intervenant',
					type: 'confirm',
				} %}
		</div>
	</div>

	<div class="mt-[40px]">
		<p class="text-[#FFBD01] font-medium text-[20px] pb-[10px]">
			Filtres
		</p>

		{{ form_start(form, {'attr': {'class': 'flex flex-col lg:flex-row lg:items-end gap-3'}}) }}

		<div class="flex flex-col w-full md:w-auto md:mr-4">
			{% include "composants/form_champ_text.html.twig" with {
				'label': 'Nom de famille',
				'field': form.name
			} %}
		</div>

		<div class="flex flex-col w-full md:w-auto md:mr-4">
			{% include "composants/form_champ_text.html.twig" with {
				'label': 'Prénom',
				'field': form.firstName
			} %}
		</div>
        
        <div class="flex flex-col w-full md:w-auto md:mr-4">
            {% include "composants/form_champ_text.html.twig" with {
                'label': 'Email',
                'field': form.email
            } %}
		</div>

		<div class="mt-2 md:mt-0">
			{% include 'composants/button.html.twig' with {
					label: 'Filtrer',
					type: 'warning',
				} %}
		</div>
		{{ form_end(form) }}
    </div>

    <hr class="mt-[20px] text-[#FFBD01]">

    <div class="mt-[20px]">
        <p class="font-medium text-[20px]">
            {{ lesInstructors|length }}
            enseignant(s) trouvé(s)
        </p>

        {% embed 'composants/table.html.twig' with {
            headers: ['Nom de famille', 'Prénom', 'Module enseigné', 'Nombre d\'heures', '']
        }%}
            {% block body %}
                {% for instructor in lesInstructors %}
                    <tr class="bg-white border-b hover:bg-gray-50">
                        <td class="px-6 py-4 font-medium text-gray-900">
                            {{ instructor.getname }}
                        </td>
                        <td class="px-6 py-4 font-medium text-gray-900">
                            {{ instructor.getfirstName }}
                        </td>
                        <td class="px-6 py-4 font-medium text-gray-900">
                            {{ instructor.getmoduleTeaching }}
                        </td>
                        <td class="px-6 py-4 font-medium text-gray-900">
                            {{ instructor.getHoursCount }}
                        </td>
                        <td class="px-6 py-4 text-right">
                            {% include 'composants/button.html.twig' with {
                                label: 'Voir la fiche',
                                type: 'info',
                            } %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="px-6 py-4 text-center text-gray-500">
                            Aucun enseignant trouvé.
                        </td>
                    </tr>
                {% endfor %}
            {% endblock %}
        {% endembed %}





</section>

