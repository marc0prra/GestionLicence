{% extends 'base.html.twig' %}

{% block title %}Connexion - Gestion du supérieur{% endblock %}

{% block body %}
<div class="flex min-h-screen w-full">

    {# --- Sidebar Gauche --- #}
    <div class="flex flex-col p-8" style="width: 320px; background-color: #F3F5F8; flex-shrink: 0;">
        <div class="mb-10">
             <div class="flex items-center gap-3 text-[#2C416E] font-bold">
                <i class="fas fa-shield-alt text-2xl"></i>
                <div>
                    <span class="block text-sm uppercase">Lycée Saint-Vincent</span>
                    <span class="block text-xs text-gray-500">Enseignement Supérieur</span>
                </div>
             </div>
        </div>
    </div>

    {# --- Contenu Principal --- #}
    <div class="flex-1 bg-white" style="padding-top: 60px; padding-left: 80px;">
        
        <h1 class="text-3xl font-bold text-black mb-10">
            Gestion du supérieur
        </h1>

        <div style="width: 600px; max-width: 100%;">
            
            <h2 class="text-xl font-bold mb-6" style="color: #2C416E;">
                Connexion au portail
            </h2>

            <form method="post" class="space-y-6">
                {% if error %}
                    {# Message d'erreur Symfony #}
                    <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-gray-700">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                        <a href="{{ path('app_logout') }}" style="color: #2C416E;" class="underline hover:text-blue-800">Déconnexion</a>
                    </div>
                {% else %}
                    
                    {# Champ Email #}
                    {# Styles repris de form_champ_text.html.twig : w-[399px] h-[46px] focus:purple #}
                    <div>
                        <label for="inputEmail" class="block text-base font-normal text-black mb-2">
                            Email - champ obligatoire
                        </label>
                        <input type="email" 
                               value="{{ last_username|default('j.martins@mentalworks.fr') }}" 
                               name="email" 
                               id="inputEmail" 
                               class="w-[399px] h-[46px] px-4 border border-gray-200 rounded placeholder-gray-400 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500"
                               placeholder="j.martins@mentalworks.fr"
                               autocomplete="email" 
                               required 
                               autofocus>
                    </div>

                    {# Champ Mot de passe #}
                    <div>
                        <label for="inputPassword" class="block text-base font-normal text-black mb-2">
                            Mot de passe - champ obligatoire
                        </label>
                        <input type="password" 
                               name="password" 
                               id="inputPassword" 
                               class="w-[399px] h-[46px] px-4 border border-gray-200 rounded placeholder-gray-400 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500"
                               placeholder="••••••••••••"
                               autocomplete="current-password" 
                               required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="pt-2">
                        {# Inclusion du composant Bouton depuis le dossier 'composants' #}
                        {% include 'composants/button.html.twig' with {
                            'label': 'Accéder au portail',
                            'type': 'confirm'
                        } %}
                    </div>
                {% endif %}
            </form>
        </div>
    </div> 
</div>
{% endblock %}