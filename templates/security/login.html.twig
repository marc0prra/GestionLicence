{% extends 'base.html.twig' %}

{% block title %}Connexion - Gestion du supérieur{% endblock %}

{% block sidebar %}
    {% include 'composants/sidebar_login.html.twig' %}
{% endblock %}

{% block header %}
{% endblock %}

{% block body %}
<div class="bg-white min-h-screen w-full text-left" style="padding-top: 60px; padding-left: 80px;">
    
    <h1 class="text-3xl font-bold text-black mb-10">
        Gestion du supérieur
    </h1>

    <div style="width: 600px; max-width: 100%;">
        <h2 class="text-xl font-bold mb-6" style="color: #2C416E;">
            Connexion au portail
        </h2>

        <form method="post" class="space-y-6">
            {% if error %}
                <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            {# 1. Zone d'information si déjà connecté (mais n'empêche plus l'affichage du form) #}
            {% if app.user %}
                <div class="mb-6 p-4 bg-blue-50 text-gray-800 rounded-lg border border-blue-100">
                    Vous êtes connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>. 
                    <br>
                    <a href="{{ path('app_logout') }}" style="color: #2C416E;" class="underline hover:text-blue-800 font-medium">Se déconnecter</a>
                </div>
            {% endif %}
            
            {# 2. Le formulaire s'affiche désormais TOUT LE TEMPS #}
            <div class="mb-4">
                <label for="inputEmail" class="block mb-2 text-base font-normal text-black">
                    Email - champ obligatoire
                </label>
                <input type="email" 
                       value="{{ last_username }}" 
                       name="email" 
                       id="inputEmail" 
                       style="height: 50px;"
                       class="bg-white border border-gray-200 text-black text-base rounded-md focus:ring-blue-900 focus:border-blue-900 block w-full px-4 shadow-sm placeholder-gray-500" 
                       placeholder="j.martins@mentalworks.fr"
                       autocomplete="email" 
                       required 
                       autofocus>
            </div>
            
            <div class="mb-6">
                <label for="inputPassword" class="block mb-2 text-base font-normal text-black">
                    Mot de passe - champ obligatoire
                </label>
                <input type="password" 
                       name="password" 
                       id="inputPassword" 
                       style="height: 50px;"
                       class="bg-white border border-gray-200 text-black text-base rounded-md focus:ring-blue-900 focus:border-blue-900 block w-full px-4 shadow-sm placeholder-gray-500" 
                       placeholder="••••••••••••"
                       autocomplete="current-password" 
                       required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="pt-2">
                <button type="submit" 
                        style="background-color: #2C416E; height: 50px;"
                        class="text-white hover:opacity-90 font-medium rounded-md text-base px-6 w-auto flex items-center justify-center">
                    Accéder au portail
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}