{% extends 'base.html.twig' %}

{% block title %}Connexion - Gestion du supérieur{% endblock %}

{% block body %}
<div class="flex min-h-screen w-full">

    <div class="flex flex-col p-8" style="width: 320px; background-color: #F3F5F8; flex-shrink: 0;">
        <div class="mb-10">

             <div class="flex items-center gap-3 text-[#2C416E] font-bold">
                <i class="fas fa-shield-alt text-2xl"></i>
                <div>
                    <span class="block text-sm uppercase">Lycée Saint-Vincent</span>
                    <span class="block text-xs text-gray-500">Enseignement Supérieur</span>
                </div>
             </div>
        </div>
    </div>

    <div class="flex-1 bg-white" style="padding-top: 60px; padding-left: 80px;">
        
        {# Titre principal H1 #}
        <h1 class="text-3xl font-bold text-black mb-10">
            Gestion du supérieur
        </h1>

        <div style="width: 600px; max-width: 100%;">
            
            <h2 class="text-xl font-bold mb-6" style="color: #2C416E;">
                Connexion au portail
            </h2>

            <form method="post" class="space-y-6">
                {% if error %}
                    <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3 text-gray-700">
                        Vous êtes connecté en tant que {{ app.user.userIdentifier }}, 
                        <a href="{{ path('app_logout') }}" style="color: #2C416E;" class="underline hover:text-blue-800">Déconnexion</a>
                    </div>
                {% else %}
                    
                    <div class="mb-4">
                        <label for="inputEmail" class="block mb-2 text-base font-normal text-black">
                            Email - champ obligatoire
                        </label>
                        <input type="email" 
                               value="{{ last_username|default('j.martins@mentalworks.fr') }}" 
                               name="email" 
                               id="inputEmail" 
                               style="height: 50px;"
                               class="bg-white border border-gray-200 text-black text-base rounded-md focus:ring-blue-900 focus:border-blue-900 block w-full px-4 shadow-sm placeholder-gray-500" 
                               placeholder="j.martins@mentalworks.fr"
                               autocomplete="email" 
                               required 
                               autofocus>
                    </div>

                    <div class="mb-6">
                        <label for="inputPassword" class="block mb-2 text-base font-normal text-black">
                            Mot de passe - champ obligatoire
                        </label>
                        <input type="password" 
                               name="password" 
                               id="inputPassword" 
                               style="height: 50px;"
                               class="bg-white border border-gray-200 text-black text-base rounded-md focus:ring-blue-900 focus:border-blue-900 block w-full px-4 shadow-sm placeholder-gray-500" 
                               placeholder="••••••••••••"
                               autocomplete="current-password" 
                               required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="pt-2">
                        <button type="submit" 
                                style="background-color: #2C416E; height: 50px;"
                                class="text-white hover:opacity-90 font-medium rounded-md text-base px-6 w-auto flex items-center justify-center">
                            Accèder au portail
                        </button>
                    </div>
                {% endif %}
            </form>
        </div>
    </div>

</div>
{% endblock %}