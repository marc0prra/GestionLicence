{% extends 'base.html.twig' %}

{% block title %}Formulaire d'intervention
{% endblock %}

{% block body %}
	<div class="max-w-5xl mx-auto mt-10 p-6">
		{{ form_start(form) }}
		{% include "composants/form_champ_text.html.twig" with {
				'label' : 'Titre',
				'field' : form.title,
				'placeholder' : 'Saisissez un titre'
		} %}

		<div class="flex flex-row gap-4">
			<div>
				{% include "composants/form_champ_date.html.twig" with {
                'field': form.start_date 
            } %}
			</div>

			<div class="mt-4">
				{% include "composants/form_champ_date.html.twig" with {
                'label': 'Date de fin',
                'field': form.end_date
            } %}
			</div>
		</div>

		{% include "composants/switch.html.twig" with {
            'field': form.remotely,
            'label': 'Intervention effectu√©e en visio'
        } %}

		{{ form_end(form) }}
	</div>
{% endblock %}
