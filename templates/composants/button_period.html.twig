{% extends 'base.html.twig' %}

{% block title %}Bouton Période{% endblock %}

{% block body %}
<div class="min-h-screen flex flex-col items-center justify-center gap-10 bg-gray-50">

    {# --- Option 1 : Le bouton seul (État Actif) --- #}
    <div class="text-center">
        <p class="mb-2 text-gray-400 text-xs uppercase tracking-wider">Bouton Seul</p>
        <button class="bg-[#2E3B59] text-white text-sm font-medium py-1.5 px-6 rounded-full shadow-sm hover:bg-opacity-90 transition-all">
            Semaine
        </button>
    </div>

    {# --- Option 2 : Le sélecteur complet (Semaine / Mois) --- #}
    {# C'est probablement ce que tu voudras utiliser au final #}
    <div class="text-center">
        <p class="mb-2 text-gray-400 text-xs uppercase tracking-wider">Sélecteur Complet</p>
        
        <div class="inline-flex bg-white p-1 rounded-full border border-gray-200 shadow-sm">
            {# État Actif #}
            <button class="bg-[#2E3B59] text-white text-sm font-medium py-1.5 px-6 rounded-full shadow-sm transition-all">
                Semaine
            </button>
            
            {# État Inactif #}
            <button class="text-gray-500 hover:text-gray-700 text-sm font-medium py-1.5 px-6 rounded-full transition-all">
                Mois
            </button>
        </div>
    </div>

</div>
{% endblock %}