{% extends 'base.html.twig' %}

{% block body %}
	<div class="max-w-4xl mx-auto mt-10 p-6">
		<form
			class="space-y-6 ">
			{# Première ligne : Module et Date de début #}
			<div
				class="flex flex-wrap md:flex-nowrap space-x-8">
				{# Champ Module #}
				<div class="">
					<label for="module" class="block text-lg font-normal text-black mb-2">
						Module - champ obligatoire
					</label>
					<div class="relative">
						<select id="module" name="module" required class="w-full h-12 px-4 bg-white border border-gray-300 rounded-lg appearance-none focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-500">
							<option selected disabled>Sélectionnez le module</option>
							<option value="1">Module 1</option>
							<option value="2">Module 2</option>
						</select>
					</div>
				</div>

				{# Champ Date de début #}
				<div class="">
					<label for="date_debut" class="block text-lg font-normal text-black mb-2">
						Date de début - champ obligatoire
					</label>
					<input type="datetime-local" id="date_debut" name="date_debut" required class="w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-800" value="2025-11-25T08:30">
				</div>
			</div>

			{# Deuxième ligne : Nom de famille (aligné sur la première colonne) #}
			<div>
				<div class="">
					<label for="nom" class="block text-lg font-normal text-black mb-2">
						Nom de famille
					</label>
					<input type="text" id="nom" name="nom" placeholder="Saisissez le nom de famille" class="w-full h-12 px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 placeholder-gray-400">
				</div>
			</div>
		</form>
	</div>
{% endblock %}
