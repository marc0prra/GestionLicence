{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-5xl mx-auto mt-10 p-6 font-sans">
        
        <form class="grid grid-cols-1 md:grid-cols-16 gap-x-8 gap-y-8">
            
            <div class="md:col-span-7">
                <label for="module" class="block text-base font-normal text-black mb-2">
                    Module - champ obligatoire
                </label>
                <div class="relative">
                    <select id="module" name="module" required 
                            class=" w-[399px] h-[46px] px-4 bg-white border border-gray-200 rounded text-gray-500 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500 cursor-pointer">
                        <option selected disabled>Sélectionnez le module</option>
                        <option value="1">Module 1</option>
                        <option value="2">Module 2</option>
                    </select>
                </div>
            </div>

            <div class="md:col-span-5">
                <label for="date_debut" class="block text-base font-normal text-black mb-2">
                    Date de début - champ obligatoire
                </label>
                <input type="datetime-local" 
                       id="date_debut" 
                       name="date_debut" 
                       required 
                       class="w-[281px] h-[46px] px-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-800" 
                       value="2025-11-25T08:30">
            </div>

            <div class="md:col-span-7">
                <label for="nom" class="block text-base font-normal text-black mb-2">
                    Nom de famille
                </label>
                <input type="text" id="nom" name="nom" 
                       placeholder="Saisissez le nom de famille" 
                       class="w-[399px] h-[46px] px-4 border border-gray-200 rounded placeholder-gray-400 focus:outline-none focus:border-purple-500 focus:ring-1 focus:ring-purple-500">
            </div>

        </form>
    </div>
{% endblock %}