{% extends 'base.html.twig' %}

{% block body %}
	<div class="w-full max-w-md mx-auto mt-5">
		<label class="block mb-2 text-sm font-medium text-gray-700">
			Intervenants - champ obligatoire
		</label>

		<div class="flex flex-wrap items-center gap-2 p-2 bg-white border border-gray-300 rounded-md shadow-sm focus-within:ring-2 focus-within:ring-blue-500 focus-within:border-blue-500">

			<div id="chips-container" class="flex flex-wrap gap-2"></div>

			<select id="intervenant-select" class="flex-1 min-w-[150px] bg-transparent border-none outline-none text-sm cursor-pointer focus:ring-0">
				<option value="" disabled selected>Choisir un intervenant...</option>
				{% for intervenant in intervenants %}
					<option value="{{ intervenant.id }}" data-name="{{ intervenant.nom }}">
						{{ intervenant.nom }}
					</option>
				{% endfor %}
			</select>
		</div>
	</div>

	{{ encore_entry_script_tags('app') }}
{% endblock %}
