{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Bienvenue !
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<script src="{{ asset('fullcalendar/core/index.global.min.js') }}"></script>
		<script src="{{ asset('fullcalendar/daygrid/index.global.min.js') }}"></script>
		<script src="{{ asset('fullcalendar/timegrid/index.global.min.js') }}"></script>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

		{% block stylesheets %}

			<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
		{% endblock %}

		{% block javascripts %}

			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>

	<body
		class="flex min-h-screen bg-gray-50">

		{# Bloc Sidebar surchargeable #}
		{% block sidebar %}
			{% include 'composants/sidebar.html.twig' %}
		{% endblock %}

		{# HEADER/FILE D'ARIANE #}
		<main class="flex-1 min-w-0 p-0 flex flex-col">
			{% block header %}
					<div class="flex flex-col w-full">
						<div class="flex items-center gap-2 p-4">
							{# L'icône maison fixe #}
							<svg width="14" height="14" viewbox="0 0 14 14" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M1.75 12.4444H4.375V7.77778H9.625V12.4444H12.25V5.44444L7 1.94444L1.75 5.44444V12.4444ZM0 14V4.66667L7 0L14 4.66667V14H7.875V9.33333H6.125V14H0Z" fill="#1F384C"/>
							</svg>
							
							<p class="font-medium text-[#1F384C]">
								{# C'est ce bloc que vos pages enfants vont remplir #}
								{% block breadcrumb %}{% endblock %}
							</p>
						</div>
						<hr class="border-[#C8CBD9] w-full">
					</div>
				{% endblock %}


			<div class="p-6">
				{# === ZONE DES MESSAGES FLASH (POP-UP) === #}
				{# Messages de Succès (Enregistrement, Modification, etc.) #}
					{% for message in app.flashes('success') %}
						<div class="mb-4 w-full max-w-[500px] p-4 text-sm text-green-800 rounded-lg bg-green-50 border border-green-200" role="alert"> <span class="font-bold">Succès :</span>
						{{ message }}
					</div>
				{% endfor %}

				{# Messages d'Erreur (Validation échouée, problème technique) #}
				{% for message in app.flashes('error') %}
					<div class="mb-4 w-full max-w-[500px] p-4 text-sm text-red-800 rounded-lg bg-red-50 border border-red-200" role="alert">
						<span class="font-bold">Erreur :</span>
						{{ message }}
					</div>
				{% endfor %}
				
				{% block body %}

				{% endblock %}
			</div>
		</main>
	</body>
</html>
