{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Bienvenue !{% endblock %}
        </title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}
                {{ importmap('app') }}
            {% endblock %}
        {% endblock %}
    </head>

    <body class="flex min-h-screen bg-gray-50">

        {# === ZONE DES MESSAGES FLASH (POP-UP) === #}
        {# Doit être ici pour flotter au-dessus de tout le reste #}
        <div class="fixed top-5 right-5 z-50 w-full max-w-sm pointer-events-none">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="pointer-events-auto mb-4 rounded-lg shadow-lg border-l-4 p-4 bg-white transition-all duration-300 transform hover:scale-105 animate-bounce-in
                        {% if label == 'error' %} border-red-500 text-red-700
                        {% elseif label == 'success' %} border-green-500 text-green-700
                        {% else %} border-blue-500 text-blue-700 {% endif %}" role="alert">
                        
                        <div class="flex items-center justify-between">
                            <div class="flex items-center">
                                {# Icones #}
                                {% if label == 'error' %}
                                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                                {% else %}
                                    <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                {% endif %}
                                <p class="font-medium">{{ message }}</p>
                            </div>
                            
                            {# Bouton croix pour fermer #}
                            <button onclick="this.parentElement.parentElement.remove();" class="ml-4 text-gray-400 hover:text-gray-900 focus:outline-none">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
                            </button>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        {# === FIN ZONE FLASH === #}

        {# Bloc Sidebar surchargeable #}
        {% block sidebar %}
            {% include 'composants/sidebar.html.twig' %}
        {% endblock %}

        <main class="flex-1 min-w-0 p-0 flex flex-col">
            {% block header %}
                {% include 'composants/header.html.twig' %}
            {% endblock %}
            
            <div class="p-6"> 
                {% block body %}{% endblock %}
            </div>
        </main>

    </body>
</html>